PROGRAM Grafikmodus_umschalten;USES Crt, Graph;CONST Wdh = 100; (* Anzahl an Wiederholungen *)VAR Treiber, i, Modus: SmallInt;BEGINDetectGraph (Treiber, Modus);(* stellt den besten Grafikmodus fest und setzt Treiber und Modus *)InitGraph (Treiber, Modus, 'C:\Turbo\BGI');(* in Grafikmodus umschalten; passen Sie das Verzeichnis entsprechend an *) begin   begin (*Das Haus vom Nikolaus*)   SetColor (Yellow);   Line (300, 200, 500, 400);   Line (300, 200, 100, 400);   Line (100, 400, 500, 600);   Line (100, 600, 500, 400);   //FloodFill (100, 400, Red);   Rectangle (100, 400, 500, 600);   OutTextXY (250,350, 'Hallo');   end;   begin (*Kreis*)   Circle (500, 600, 80);  (* X: 500, Y: 600, Radius: 80px *)   end;   begin (*Einzelner Pixel*)   PutPixel (1000, 500, Green);   (* X: 100, Y: 50, Farbnummer: 4 (rot)*)   end;   readln(); end; begin BEGINDetectGraph (Treiber, Modus);InitGraph (Treiber, Modus, 'C:\Turbo\BGI\ '); Randomize;FOR i := 1 TO Wdh DOBEGINPutPixel (Random(1440),Random(900),Random(16));Delay(10); (* 10 ms warten *)END;ReadKey;CloseGraph;end;end;beginDetectGraph (treiber, modus);InitGraph (treiber, modus, 'C:\Turbo\BGI\ ');SetColor (Blue); (* aktuelle Farbe auf Blau setzen *)Circle (100,100,50); (* einen blauen Kreis zeichnen *)FloodFill (70, 70, Blue); (* die blauen Randlinien des Kreises dienen als Begrenzungsflaeche *)ReadKey;CloseGraph;CloseGraph; (* wieder in den Textmodus zurueck *)end;END.