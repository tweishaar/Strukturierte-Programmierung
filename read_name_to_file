FUNCTION read_name_to_file : STRING;
VAR name : STRING;
BEGIN
  write('Geben Sie einen Namen ein("Vorname Nachname"): ');
  readln(name);
  write_name_into_file(name);
  read_name_to_file := name;
END;

PROCEDURE read_names_into_files();
VAR i : integer;
BEGIN
    FOR i := 0 TO 3 DO
      BEGIN
        names[i] := read_name_to_file();
      END;
END;